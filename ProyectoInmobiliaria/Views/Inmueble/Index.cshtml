@model IEnumerable<ProyectoInmobiliaria.Models.Inmueble>

@{
    ViewData["Title"] = "Index";
}

<h3>Listado de Inmuebles</h3>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th>
                Nro Habitaciones
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadHabitaciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td> 
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdInmueble }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdInmueble }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdInmueble })
            </td>
        </tr>
    }
}
    </tbody>
</table>
