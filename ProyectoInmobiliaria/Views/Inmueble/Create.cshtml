@model ProyectoInmobiliaria.Models.Inmueble

@{ ViewData["Title"] = "Create";}

<h4 class="text-center">Crear Inmueble</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>    
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-5">
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" required>
                        <div class="invalid-feedback">Ingrese direccion.</div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Uso" class="control-label"></label>
                        <input asp-for="Uso" class="form-control" required>
                        <div class="invalid-feedback">Ingrese uso.</div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tipo" class="control-label"></label>
                        <input asp-for="Tipo" class="form-control" required>
                        <div class="invalid-feedback">Ingrese tipo.</div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Cantidad de Hambientes</label>
                        <input asp-for="CantidadHabitaciones" class="form-control" required>
                        <div class="invalid-feedback">Ingrese hambientes.</div>
                    </div>
                </div>
                <div class="col-12 col-md-5">
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" required>
                        <div class="invalid-feedback">Ingrese precio.</div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" required>
                        <div class="invalid-feedback">Ingrese estado.</div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Propietario</label>
                        <select class="form-control" name="IdPropietario">
                            @foreach (var item in (IList<Propietario>)ViewBag.Propietarios)
                            {
                                <option value="@item.IdPropietario">@(item.Nombre + " " + item.Apellido)</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

