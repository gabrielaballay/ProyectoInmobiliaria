@model ProyectoInmobiliaria.Models.LoginView

@{
    ViewData["Title"] = "Login";
}

<h4 class="text-center mt-2 mb-2">Login</h4>

<div class="row d-flex justify-content-center">
    <div class="col-md-3 formulario">
        <form asp-action="Login" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group has-danger">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required>
                <div class="invalid-feedback">Ingrese Correo Electronico</div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required>
                <div class="invalid-feedback">Ingrese Contraseña</div>
            </div>
            <span style="color:red">@ViewBag.Mensaje</span>
            <div class="form-group d-flex justify-content-center">
                <input type="submit" value="Ingresar" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

