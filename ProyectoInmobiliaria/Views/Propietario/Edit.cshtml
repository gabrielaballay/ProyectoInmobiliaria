@model ProyectoInmobiliaria.Models.Propietario

@{
    ViewData["Title"] = "Edit";
}

<h4 class="text-center">Editar Propietario</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row d-flex justify-content-center">
                <div class="col-12 col-md-4">
                    <div class="form-group has-danger">
                        <label for="nombre">Nombre</label>
                        <input asp-for="Nombre" class="form-control" id="nombre" required>
                        <div class="invalid-feedback">Ingrese nombre.</div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Apellido" class="control-label"></label>
                        <input asp-for="Apellido" class="form-control" required>
                        <span class="invalid-feedback">Ingrese Apellido.</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Dni" class="control-label"></label>
                        <input asp-for="Dni" class="form-control" required>
                        <span class="invalid-feedback">Ingrese DNI.</span>
                    </div>
                </div>
                <div class="col-12 col-md-4">
                    <div class="form-group">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" required>
                        <span class="invalid-feedback">Ingrese Direccion.</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" required>
                        <span class="invalid-feedback">Ingrese un Email.</span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="form-group ml-5 mr-5">
                        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                    </div>
                    <div class="ml-5">
                        <a asp-action="Index" class="btn btn-success">Volver a la Lista</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>